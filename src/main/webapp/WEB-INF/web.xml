<!DOCTYPE web-app PUBLIC
  "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Archetype Created Web Application</display-name>
  <context-param>
    <param-name>credentials</param-name>
    <param-value>credentials.properties</param-value>
  </context-param>
  <!--DEFAULT LANGUAGE-->
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.fallbackLocale</param-name>
    <param-value>en</param-value>
  </context-param>
  <!-- MAIN PAGE -->
  <!--
  Servlet: com.epam.aviasales.controllers.MainServlet
  Is configured by annotation for correct work as root
  -->
  <!-- LOGIN -->
  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <!-- REGISTER -->
  <servlet>
    <servlet-name>registerServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>registerServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <!-- FLIGHTS -->
  <servlet>
    <servlet-name>flightsServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.FlightServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>flightsServlet</servlet-name>
    <url-pattern>/flights</url-pattern>
  </servlet-mapping>
  <!-- TICKET -->
  <servlet>
    <servlet-name>ticketServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.TicketServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ticketServlet</servlet-name>
    <url-pattern>/ticket</url-pattern>
  </servlet-mapping>
  <!-- MANAGE -->
  <servlet>
    <servlet-name>manageServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.ManageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>manageServlet</servlet-name>
    <url-pattern>/manage</url-pattern>
  </servlet-mapping>
  <!-- CONFIRMATION -->
  <servlet>
    <servlet-name>confirmationServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.ConfirmationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>confirmationServlet</servlet-name>
    <url-pattern>/confirm</url-pattern>
  </servlet-mapping>
  <!-- PROFILE -->
  <servlet>
    <servlet-name>UserProfileServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.UserProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserProfileServlet</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
</web-app>
