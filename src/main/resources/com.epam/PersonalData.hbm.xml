<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.epam.aviasales.domain.PersonalData" table="personal_data" catalog="imshaart_aviasalesdemo">
        <id name="id" type="int">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="name" length="256" not-null="true" />
        </property>
        <property name="passport" type="string">
            <column name="passport" length="50" not-null="true" unique="true" />
        </property>
        <property name="dateOfBirth" type="java.time.LocalDate">
            <column name="dateOfBirth" length="20" not-null="true" />
        </property>
    </class>
</hibernate-mapping>