<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.epam.aviasales.domain">
  <class name="Flight" table="flight" catalog="imshaart_aviasalesdemo">
    <id name="id" type="java.lang.Long" column="id">
      <generator class="identity"/>
    </id>
    <many-to-one name="fromAirport" class="Airport" column="from_airport_id" not-null="true" lazy="false"/>
    <many-to-one name="toAirport" class="Airport" column="to_airport_id" not-null="true" lazy="false"/>
    <many-to-one name="airplane" class="Airplane" column="airplane_id" not-null="true" lazy="false"/>
    <property name="departureTime" type="com.epam.aviasales.util.LocalDateTimeUserType" column="departure_time"
      not-null="true"/>
    <property name="arrivalTime" type="com.epam.aviasales.util.LocalDateTimeUserType" column="arrival_time"
      not-null="true"/>
    <property name="baseTicketPrice" type="java.lang.Integer" column="base_ticket_price"
      not-null="true"/>
    <property name="extraBaggagePrice" type="java.lang.Integer" column="extra_baggage_price"
      not-null="true"/>
    <property name="freeSeatEconomy" type="java.lang.Integer" column="free_seat_economy"
      not-null="true"/>
    <property name="freeSeatBusiness" type="java.lang.Integer" column="free_seat_business"
      not-null="true"/>
  </class>
</hibernate-mapping>