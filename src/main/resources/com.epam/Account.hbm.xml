<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.epam.aviasales.domain.Account" table="account" catalog="imshaart_aviasalesdemo">
        <id name="id" type="int">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="type" type="int">
            <column name="type" length="1" not-null="true"/>
        </property>
        <property name="name" type="string">
            <column name="name" length="256" not-null="true" />
        </property>
        <property name="login" type="string">
            <column name="login" length="20" not-null="true" unique="true" />
        </property>
        <property name="password" type="string">
            <column name="password" length="20" not-null="true"/>
        </property>
        <property name="email" type="string">
            <column name="email" length="20" not-null="true" unique="true" />
        </property>
        <property name="phone" type="string">
            <column name="phone" length="20" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>